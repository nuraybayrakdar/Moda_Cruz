<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Moda_Cruz.Views.FavoriTab" BackgroundColor="AliceBlue">
    <ContentPage.Content>
        <StackLayout>
            <Frame CornerRadius="5" HasShadow="True" BackgroundColor="White">
                <Label Text="Favorilerim" TextColor="DeepPink" FontSize="Medium" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <Frame BackgroundColor="White" Margin="5"   Padding="5" CornerRadius="5">
                <StackLayout Margin="5">
                    <Grid Margin="20,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                        <Image x:Name="FavImage" HeightRequest="90" Grid.Row="0" Grid.Column="0" VerticalOptions="Start" HorizontalOptions="Start"/>
                        <Label x:Name="FavName"   Grid.Row="0" Grid.Column="1" TextColor="Black"  FontSize="Subtitle" FontAttributes="Bold" VerticalTextAlignment="Start" VerticalOptions="Center"/>
                        <Label x:Name="FavSatici" Grid.Row="1" Grid.Column="1" TextColor="Black" VerticalTextAlignment="Center" VerticalOptions="Center" />
                        <Label x:Name="FavRenk"  Grid.Row="2" Grid.Column="1"  TextColor="Black" VerticalOptions="Center" VerticalTextAlignment="Start"/>
                        <Label x:Name="FavPrice" Grid.Row="2" Grid.Column="0" TextColor="Black" FontAttributes="Bold" VerticalTextAlignment="Center" VerticalOptions="Center" />
                        <Label x:Name="FavDurum" Grid.Row="3" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" VerticalOptions="Center" />
                        <Label x:Name="FavBeden" Grid.Row="3" Grid.Column="1" TextColor="Black" VerticalTextAlignment="Center" VerticalOptions="Center" />
                    </Grid>
                </StackLayout>
            </Frame>
            <Label VerticalOptions="EndAndExpand" Text="ModaCruz" HorizontalOptions="End" FontSize="Medium" FontAttributes="Bold" TextColor="DeepPink"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>